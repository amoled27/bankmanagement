{{#each result}}
<div class="container">

    <form action="/customer/update/{{customer_ID}}" method="post">
        <div class="form-group">
            <label for="cname">Name</label>
            <input type="text" class="form-control" name="cname" value="{{customer_Name}}">
        </div>

        <div class="form-group">
            <label for="ssn">SSN</label>
            <input type="disabled" class="form-control" name="ssn" value="{{ssn}}">
        </div>
        <div class="form-group">
            <label for="address">Address</label>
            <input type="text" class="form-control" name="address" value="{{customer_address}}">
        </div>
        <div class="form-group">
            <label for="age">Age</label>
            <input type="text" class="form-control" name="age" value="{{age}}">
        </div>
        <button type="submit" class="btn btn-dark">update</button>
    </form>
</div>
{{else}}
not found
{{/each}}